{
    "manifest_version": 3,
    "name": "Gmail Copy Extension",
    "version": "1.0",
    "description": "Copy text from Gmail subject",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "commands": {
        "copy-gmail-subject": {
            "suggested_key": {
                "default": "Ctrl+Shift+X"
            },
            "description": "Copy text from Gmail subject"
        }
    }
}