{
    "manifest_version": 2,
    "name": "Gmail Copy Extension",
    "version": "1.0",
    "description": "Copy text from Gmail subject",
    "permissions": [
        "activeTab",
        "tabs"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "commands": {
        "copy-gmail-subject": {
            "suggested_key": {
                "default": "Ctrl+Shift+X"
            },
            "description": "Copy text from Gmail subject"
        }
    }
}